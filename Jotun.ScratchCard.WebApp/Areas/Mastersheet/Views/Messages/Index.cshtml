@{
    ViewData["Title"] = "Paid SMS";
}


<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Paid</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item active">
                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Card Payment List</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card radius-10">
            <div class="card-body grid-container">
                <div id="grid"></div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>

        function GetUserName() {
            var text = "";
            var possible = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz";

            for (var i = 0; i < 10; i++)
                text += possible.charAt(Math.floor(Math.random() * possible.length));
            return text;
        }

        function makeNumber(max) {
            var text = "";
            var possible = "123456789";

            for (var i = 0; i < 5; i++)
                text += possible.charAt(Math.floor(Math.random() * max));
            return text;
        }

        var dataList = [];
        $(document).ready(function () {

            for (var sl = 1; sl < 45985; sl++) {
                let data = {
                    Id: sl,
                    Date: '02-Jan-2023',
                    Card: makeNumber(5),
                    Product: GetUserName(),
                    Value: Math.floor((Math.random() * 350) + 1),
                    Painter: GetUserName(),
                    DealerCode: Math.floor((Math.random() * 9999) + 1),
                    DealerName: GetUserName()
                }

                dataList.push(data);
            }

            $("#grid").kendoGrid({
                dataSource: {
                    data: dataList,
                    pageSize: 20,
                    sort: { field: "Id", dir: "desc" }
                },
                height: 650,
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                columns: [{
                    field: "Id",
                    title: "Id",
                    width: 120
                }, {
                    field: "Date",
                    title: "Date"
                }, {
                    field: "Product",
                    title: "Product"
                }, {
                    field: "Value",
                    title: "Value"
                }, {
                    field: "Painter",
                    title: "Painter"
                }, {
                    field: "DealerCode",
                    title: "D#Code"
                }, {
                    field: "DealerName",
                    title: "D#Name"
                }
                ]
            });
        });
    </script>
}